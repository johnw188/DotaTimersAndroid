<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="aqua">#00FFFF</color>
    <color name="black">#000000</color>
    <color name="black_overlay">#66000000</color>
    <color name="blue">#0000FF</color>
    <color name="countdown_text">#CCCCCC</color>
    <color name="fuchsia">#FF00FF</color>
    <color name="gray">#808080</color>
    <color name="green">#008000</color>
    <color name="lime">#00FF00</color>
    <color name="maroon">#800000</color>
    <color name="navy">#000080</color>
    <color name="olive">#808000</color>
    <color name="purple">#800080</color>
    <color name="red">#FF0000</color>
    <color name="silver">#C0C0C0</color>
    <color name="teal">#008080</color>
    <color name="white">#FFFFFF</color>
    <color name="yellow">#FFFF00</color>

    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="buttonBarStyle" format="reference" />
        <attr name="buttonBarButtonStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="CountdownOverlay">
        <attr name="fontSize" format="dimension" />
    </declare-styleable>

    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <string name="action_settings">Settings</string>
    <string name="app_name">DotaTimers</string>
    <string name="hello_world">Hello world!</string>
    <string name="title_activity_hero_selection">Hero Selection</string>
    <string name="title_activity_timer_config">Timer Config</string>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="game_timer">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.99</item>
    </style>

    <style name="hero_portrait_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="image_button"></style>

</resources>
